def my_function():
    my_variable = None  # Assume my_variable is None or not defined

    # Using conditional statements
    if my_variable is not None:
        value = my_variable
    else:
        value = "Default Value"

    print(value)

    # Using the null coalescing operator (available in Python 3.8+)
    value = my_variable or "Default Value"
    print(value)

my_function()
